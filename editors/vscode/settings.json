{
    // Native
    "editor.fontFamily": "JetBrainsMono Nerd Font, Hasklug Nerd Font Mono",
    "editor.fontWeight": "600",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.formatOnPaste": false,
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "editor.wordWrap": "off",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.excludeGitIgnore": false,
    "search.useGlobalIgnoreFiles": true,
    "search.useIgnoreFiles": true,
    "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    // Plugins
    "workbench.iconTheme": "file-icons",
    "php-docblocker.returnGap": true,
    "php-docblocker.useShortNames": true,
    "workbench.startupEditor": "none",
    "extensions.ignoreRecommendations": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "focus.opacity": "0.7",
    "focus.highlightRange": "block",
    "luahelper.format.align_args": true,
    "luahelper.format.align_parameter": true,
    "luahelper.format.break_after_functioncall_lp": true,
    "luahelper.format.break_after_functiondef_lp": true,
    "luahelper.format.break_after_table_lb": true,
    "luahelper.format.break_before_functioncall_rp": true,
    "luahelper.format.break_before_functiondef_rp": true,
    "luahelper.format.break_before_table_rb": true,
    "luahelper.format.chop_down_parameter": true,
    "luahelper.format.chop_down_table": true,
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "security.workspace.trust.untrustedFiles": "open"
}