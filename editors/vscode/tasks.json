{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PHP CS Fixer All",
            "type": "shell",
            "command": "${workspaceFolder}/vendor/bin/php-cs-fixer fix",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "PHP CS Fixer Current File",
            "type": "shell",
            "command": "${workspaceFolder}/vendor/bin/php-cs-fixer fix ${file}",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "PHPStan All",
            "type": "shell",
            "command": "${workspaceFolder}/vendor/bin/phpstan analyse src app tests --level max",
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "label": "PHPStan Current File",
            "type": "shell",
            "command": "${workspaceFolder}/vendor/bin/phpstan analyse ${file} --level max",
            "presentation": {
                "reveal": "always",
            }
        }
    ]
}